{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "lint", "type-check"],
      "cache": false
    },
    "deploy:web": {
      "dependsOn": ["build", "lint", "type-check"],
      "cache": false
    },
    "deploy:expo": {
      "dependsOn": ["build", "lint", "type-check"],
      "cache": false
    }
  }
}
